<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/navigation_dialog_background">

    <TextView
        android:id="@+id/TVTransparencyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/osc_transparency_description"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Opacity"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVTransparencyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="100%"
            android:textColor="@color/seekbar_blue"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <SeekBar
        android:id="@+id/SeekBarTransparency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progressTint="@color/seekbar_blue"
        android:thumbTint="@color/seekbar_blue" />

</LinearLayout>
